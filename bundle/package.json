{
  "name": "vue-crane",
  "version": "1.0.0",
  "description": "A universal, modular, multi-page, full-stack Vue boilerplate to deal with mega project, based on Node.js, Express, PM2, Lerna, Webpack, Babel, Vue.js, Element, PostCSS",
  "author": "posrix <posrix@outlook.com>",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/posrix/vue-crane"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "reboot": "npm run clean && npm run bootstrap",
    "clean:all": "rm -rf ./node_modules && rm -rf ./dist && npm run clean",
    "preinstall": "npm run npmcheckversion",
    "postinstall": "npm run build:dll && npm run bootstrap",
    "npmcheckversion": "node ./packages/dev-utils/npmcheckversion.js",
    "dev": "cd ./packages/server && npm run dev",
    "analyze": "cd ./packages/server && npm run analyze",
    "local": "cd ./packages/server && npm run local",
    "stage": "cd ./packages/server && npm run stage",
    "pre": "cd ./packages/server && npm run pre",
    "release": "cd ./packages/server && npm run release",
    "build": "cross-env NODE_ENV=production node ./scripts/build.js -x pro",
    "build:dll": "node ./scripts/dependencies.js",
    "bundle": "sh ./tasks/bundle.sh vue-crane vue-crane-bundle master",
    "precommit": "lint-staged",
    "lint-staged:eslint": "eslint --quiet --format node_modules/eslint-friendly-formatter",
    "lint-staged:prettier": "prettier --config .prettierrc --write"
  },
  "lint-staged": {
    "concurrent": "false",
    "linters": {
      "+(src|config|packages|scripts)/**/*.js": [
        "lint-staged:prettier",
        "git add"
      ],
      "*.{js,vue}": "lint-staged:eslint"
    }
  },
  "dependencies": {
    "core-js": "^2.4.1",
    "element-ui": "^2.2.0",
    "normalize.css": "^5.0.0",
    "vue": "2.5.2"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.1",
    "babel-helper-vue-jsx-merge-props": "^2.0.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-plugin-transform-vue-jsx": "^3.4.2",
    "babel-preset-env": "^1.3.3",
    "cheerio": "^0.22.0",
    "circular-dependency-plugin": "^3.0.0",
    "cross-env": "^3.1.3",
    "css-loader": "^0.26.0",
    "eslint": "^4.18.1",
    "eslint-friendly-formatter": "^2.0.7",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-vue": "^4.3.0",
    "eventsource-polyfill": "^0.9.6",
    "extract-text-webpack-plugin": "^3.0.1",
    "file-loader": "^0.10.1",
    "friendly-errors-webpack-plugin": "^1.1.3",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "json-loader": "^0.5.4",
    "lerna": "2.4.0",
    "lint-staged": "^6.0.0",
    "lodash": "^4.17.5",
    "ora": "^1.3.0",
    "postcss-import": "^9.1.0",
    "postcss-loader": "^1.3.3",
    "precss": "^1.4.0",
    "prettier": "^1.10.2",
    "prettier-eslint": "^6.1.0",
    "rimraf": "^2.6.1",
    "rucksack-css": "^0.9.1",
    "shelljs": "^0.7.5",
    "style-loader": "^0.13.2",
    "uglifyjs-webpack-plugin": "^1.1.2",
    "url-loader": "^0.5.7",
    "vue-loader": "^11.3.3",
    "vue-style-loader": "^2.0.3",
    "vue-template-compiler": "2.5.2",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.4.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-hot-middleware": "^2.20.0"
  }
}
